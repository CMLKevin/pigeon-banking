run = "npm run install:all && npm run dev"
hidden = [".config", "package-lock.json"]
modules = ["nodejs-20", "postgresql-16"]

[deployment]
# Install dependencies and build
build = ["sh", "-c", "npm install && cd client && npm install && cd ../server && npm install && cd .. && npm run build:prod"]
run = ["sh", "-c", "npm run start:prod"]
deploymentTarget = "cloudrun"
ignorePorts = false

[env]
PATH = "/home/runner/$REPL_SLUG/.config/npm/node_global/bin:/home/runner/$REPL_SLUG/node_modules/.bin"
npm_config_prefix = "/home/runner/$REPL_SLUG/.config/npm/node_global"

[[ports]]
localPort = 3001
externalPort = 3001

[deployment.env]
NODE_ENV = "production"
PGCONNECT_TIMEOUT = "30"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Backend"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Frontend"

[[workflows.workflow]]
name = "Backend"
author = "agent"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd server && npm run dev"
waitForPort = 3001

[[workflows.workflow]]
name = "Frontend"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd client && npm run dev"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[agent]
expertMode = true


